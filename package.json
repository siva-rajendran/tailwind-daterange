{
    "name": "tailwind-daterange",
    "version": "0.0.2",
    "description": "A modern React Datepicker using Tailwind CSS 4",
    "type": "module",
    "main": "dist/index.esm.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.esm.js",
            "types": "./dist/index.d.ts"
        }
    },
    "author": "siva-rajendran",
    "license": "MIT",
    "scripts": {
        "watch": "rollup -c -w",
        "clean": "rm -rf dist .rollup.cache tsconfig.rollup.tsbuildinfo",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "pret:fix": "prettier --write .",
        "format": "npm run pret:fix && npm run lint:fix",
        "build": "npm run lint && npm run clean && rollup -c rollup.config.mjs --bundleConfigAsCjs",
        "pub": "npm run build && npm publish",
        "dev": "next dev -p 8888",
        "prepare": "husky",
        "test": "echo \"No tests specified\" && exit 0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/siva-rajendran/tailwind-daterange.git"
    },
    "keywords": [
        "tailwind-daterange",
        "react-datepicker",
        "tailwind-datepicker",
        "datepicker",
        "date-picker",
        "daterangepicker",
        "react-daterangepicker",
        "date-range",
        "date-range-picker",
        "tailwind-daterange-picker"
    ],
    "peerDependencies": {
        "dayjs": "^1.11.19",
        "react": "^19.2.3"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-typescript": "^12.3.0",
        "@tailwindcss/forms": "^0.5.11",
        "@types/node": "^25.0.3",
        "@types/react": "^19.2.7",
        "@typescript-eslint/eslint-plugin": "^8.50.1",
        "@typescript-eslint/parser": "^8.50.1",
        "autoprefixer": "^10.4.23",
        "dayjs": "^1.11.19",
        "eslint": "^9.39.2",
        "eslint-config-next": "^16.1.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.26",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "next": "^16.1.1",
        "pinst": "^3.0.0",
        "postcss": "^8.5.6",
        "prettier": "^3.7.4",
        "react": "^19.0.0",
        "react-dom": "^19.2.3",
        "rollup": "^4.54.0",
        "tailwindcss": "^4.1.18",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint",
            "prettier --write"
        ],
        "*.{css,scss,json,md}": [
            "prettier --write"
        ]
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@tailwindcss/postcss": "^4.1.18"
    }
}
